<Window x:Class="Slideshow.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slideshow - Settings" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" KeyDown="Shortcuts">
    <Grid>
        <Rectangle Fill="#121212"/>
        <StackPanel Margin="10">
            <CheckBox Name="Randomize" Content="Shuffle" Checked="RandomizeEnable" Unchecked="RandomizeDisable" />
            <CheckBox Name="IncludeSub" Content="Include sub directories" Checked="IncludeSubEnable" Unchecked="IncludeSubDisable" Margin="0,10,0,0" />
            <Label Content="Ignores directory location during sorting" />
        </StackPanel>
    </Grid>
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#444" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="20,0,0,0" />
            <Setter Property="FontSize" Value="10" />
        </Style>
    </Window.Resources>
</Window>
