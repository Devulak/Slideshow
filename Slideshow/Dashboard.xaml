<Window x:Class="Slideshow.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        KeyDown="Grid_KeyDown"
        Title="MainWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="Height" Width="300">
    <Grid>
        <TextBox Name="Path" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox Name="Time" Margin="10,33,10,0" VerticalAlignment="Top"/>
        <CheckBox Name="Randomized" Content="Randomized" Margin="10,56,10,0" VerticalAlignment="Top"/>
        <Button Content="Start" Margin="10,76,10,10" Click="StartView" VerticalAlignment="Top"/>
    </Grid>
</Window>